    "/auth/register": {
      "post": {
        "security": [],
        "summary": "Registrar novo usuário",
        "tags": ["Autenticação"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string", "example": "João Silva" },
                  "email": { "type": "string", "example": "joao@email.com" },
                  "password": { "type": "string", "example": "Senha123@" },
                  "cpf": { "type": "string", "example": "123.456.789-00" }
                },
                "required": ["name", "email", "password", "cpf"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "example": {
                  "message": "Usuário criado com sucesso"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "example": {
                  "error": "Informe os campos obrigatórios corretamente"
                }
              }
            }
          },
          "409": {
            "description": "Conflict",
            "content": {
              "application/json": {
                "example": {
                  "error": "O e-mail ou CPF informado já pertence a outro usuário"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "example": {
                  "error": "Erro inesperado"
                }
              }
            }
          }
        }
      }
    },
    "/auth/sign-in": {
      "post": {
        "security": [],
