        "tags": ["Autenticação"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "example": "joao@email.com" },
                  "password": { "type": "string", "example": "Senha123@" }
